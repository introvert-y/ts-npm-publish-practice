{
  "name": "ts-npm-publish-practice",
  "version": "1.0.0",
  "description": "typescript编码转为js编码再发布",
  "main": "./lib/index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "rm -rf lib && tsc",
    "postbuild": "npm run format",
    "format": "prettier --write \"lib/*\"",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s && git add . && git commit -m 'docs(changelog): update changelog"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "files": [
    "lib/**/*"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "cz-conventional-changelog": "^3.3.0",
    "ghooks": "^2.0.4",
    "husky": "^4.2.5",
    "lint-staged": ">=10",
    "prettier": "^2.3.2",
    "typescript": "^4.3.5"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,md,html,css}": "prettier --write \"src/*\""
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    },
    "ghooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run changelog"
    }
  }
}
